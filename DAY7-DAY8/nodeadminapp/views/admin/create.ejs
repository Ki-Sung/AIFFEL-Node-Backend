<div class="wrapper wrapper-content">
    <form id="adminForm" action="/admin/create" method="post">
        <div class="ibox-content m-b-sm border-bottom">

            <!-- 아아디/암호/이름 -->
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">관리자아이디</label>
                        <input type="text" id="admin_id" name="admin_id" class="form-control">
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">관리자암호</label>
                        <input type="password" id="admin_password" name="admin_password" class="form-control">
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">관리자이름</label>
                        <input type="text" id="admin_name" name="admin_name" class="form-control">
                    </div>
                </div>
            </div>
            

            <!-- 등록/목록 버튼 영역  -->
